<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Cliente</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f0f4f7, #d9e7f2);
            margin: 0;
            padding: 0;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Container */
        .form-container {
            background: white;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            padding: 30px;
            max-width: 500px;
            width: 100%;
        }

        /* Title */
        h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #4a90e2;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Form Styles */
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: 500;
            color: #333;
        }

        input[type="text"],
        input[type="email"],
        input[type="file"] {
            padding: 12px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            outline: none;
            transition: all 0.3s;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="file"]:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 8px rgba(74, 144, 226, 0.2);
        }

        /* Button Styles */
        button {
            background: #4a90e2;
            color: white;
            border: none;
            padding: 12px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }

        button:hover {
            background: #357ab8;
        }

        /* Responsive */
        @media (max-width: 600px) {
            .form-container {
                padding: 20px;
            }

            h1 {
                font-size: 1.8rem;
            }

            button {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Agregar Cliente</h1>
        <form action="/guardar_cliente" method="POST" enctype="multipart/form-data">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required>
            
            <label for="nit">NIT:</label>
           
           
            <input type="text" id="nit" name="nit" required>
        <label for="correo">Correo:</label>
<input type="text" id="correo" name="correo" placeholder="Ej: correo1@gmail.com; correo2@gmail.com" required>


            <label for="numero">Número:</label>
            <input type="text" id="numero" name="numero" required>
            
            <label for="direccion">Dirección:</label>
            <input type="text" id="direccion" name="direccion" required>
            
            <label for="foto">Foto:</label>
            <input type="file" id="foto" name="foto" accept="image/*" >
            
            <button type="submit">Guardar Cliente</button>
        </form>
    </div>
</body>
<script>
    const correoInput = document.getElementById('correo');

    correoInput.addEventListener('keyup', function (e) {
        // Si el usuario presiona ";", agregamos un espacio después
        if (e.key === ';') {
            correoInput.value = correoInput.value.replace(/;+/g, '; ').replace(/\s+;/g, ';');
        }
    });
</script>
</html>
