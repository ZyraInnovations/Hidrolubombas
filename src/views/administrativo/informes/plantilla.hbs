<script>
document.getElementById('cliente').addEventListener('change', function() {
    const clienteId = this.value;

    // Si se selecciona un cliente, obtener los IDs de mantenimiento relacionados
    if (clienteId) {
        fetch(`/get_ids_mantenimiento?cliente=${encodeURIComponent(clienteId)}`)
            .then(response => response.json())
            .then(data => {
                const idDropdownCliente = document.getElementById('idDropdownCliente');
                idDropdownCliente.innerHTML = ''; // Limpiar las opciones anteriores

                // Agregar una opción por defecto
                const defaultOption = document.createElement('option');
                defaultOption.textContent = 'Seleccionar ID';
                defaultOption.value = '';
                idDropdownCliente.appendChild(defaultOption);

                // Llenar las opciones con los IDs de mantenimiento
                if (data.length > 0) {
                    data.forEach(mantenimiento => {
                        const option = document.createElement('option');
                        option.value = mantenimiento.id;
                        option.textContent = mantenimiento.id;
                        idDropdownCliente.appendChild(option);
                    });
                } else {
                    const option = document.createElement('option');
                    option.textContent = 'No se encontraron IDs';
                    idDropdownCliente.appendChild(option);
                }
            })
            .catch(error => {
                console.error('Error al obtener los IDs de mantenimiento:', error);
            });
    } else {
        document.getElementById('idDropdownCliente').innerHTML = '<option value="">Seleccionar ID</option>'; // Resetear si no hay cliente seleccionado
    }
});


