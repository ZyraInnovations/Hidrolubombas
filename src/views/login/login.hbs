<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEXUS</title>
    <link rel="manifest" href="/manifest.json">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
    <!-- Internal CSS -->
    
    <style>

        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-size: cover;
            background-position: center;
            transition: background-image 0.5s ease-in-out;
        }

      

      
     
        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 80px; /* Space for fixed header */
            height: calc(100vh - 80px); /* Adjust for fixed header height */
            position: relative;
            right: 30%;
            top: 70px;
        }

 .login-box {
    width: 420px;
    padding: 40px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.9);
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.85); /* Fondo blanco con algo de transparencia */
    position: absolute;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    opacity: 0;
    visibility: hidden;
}

        .login-box.active {
            opacity: 1;
            visibility: visible;
        }

        .login-box h2 {
            margin: 0 0 20px;
            padding: 0;
            font-size: 30px;
            font-weight: 700;
            text-align: center;
            color: #413d4b;
            text-transform: uppercase;
        }

        .login-box .textbox {
            position: relative;
            margin-bottom: 25px;
        }

        .login-box .textbox input {
            width: 100%;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background: #f9f9f9;
            outline: none;
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .login-box .textbox input:focus {
            border-color: #90c9a7;
            box-shadow: 0 0 10px rgba(144, 201, 167, 0.5);
        }

        .login-box .textbox span {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 12px;
            font-size: 20px;
            color: #333;
            cursor: pointer;
            transition: color 0.3s;
        }

        .login-box .textbox span:hover {
            color: #90c9a7;
        }

        .login-box .btn {
            width: 100%;
            background: #90c9a7;
            border: none;
            padding: 15px;
            cursor: pointer;
            font-size: 18px;
            color: #fff;
            border-radius: 10px;
            text-transform: uppercase;
            transition: background 0.3s, box-shadow 0.3s;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .login-box .btn:hover {
            background: #4082f5;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .login-box .forgot-password {
            text-align: center;
            margin-top: 20px;
        }

        .login-box .forgot-password a {
            color: #90c9a7;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s;
        }

        .login-box .forgot-password a:hover {
            color: #4082f5;
        }

        @media (max-width: 768px) {
            header {
                flex-direction: column;
                padding: 20px;
                text-align: center;
            }

            nav {
                flex-direction: column;
                gap: 10px;
            }

            .login-container {
                padding-top: 20px;
            }

            .login-box {
                width: 90%;
                padding: 20px;
            }
        }

        .background-image {
            position: fixed;
            left: 0;
            width: 100%;
            height: 100% /* Ajuste para la altura del header */
            z-index: -1;
            background-size: cover;
            background-position: center;
            transition: background-image 0.5s ease-in-out;
        }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .role-button {
            padding: 10px 20px;
            background-color: #413d4b;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .role-button:hover {
            background-color: #90c9a7;
        }
        @media (max-width: 768px) {
    .login-container {
        padding-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        right: 0;
        top: 0;
        height: 100vh; /* Make container take the full viewport height */
    }

    .login-box {
        width: 90%; /* Adjust width to fit smaller screens */
        max-width: 400px;
        padding: 20px;
        position: relative;
        right: 0; /* Reset position */
        top: 0; /* Reset position */
    }
}

    </style>
</head>
<body>
    <div class="background-image" id="backgroundImage"></div>


    <div class="login-container">
        <div id="conductores" class="login-box active">
            <h2>Inicia sesión</h2>
            <div class="button-container">
                <button class="role-button" onclick="changeBackground('administrativo')">Administrativo</button>
                 <button class="role-button" onclick="changeBackground('tecnico')">Tecnicos</button>
            </div>

<form action="/login" method="POST" class="form">
                <div class="textbox">
                    <input type="text" placeholder="Correo electrónico" name="email" required>
                </div>
                <div class="textbox password-container">
                    <input type="password" placeholder="Contraseña" name="password" id="password-conductores" required>
                    <span class="toggle-password" onclick="togglePasswordVisibility('password-conductores')"><i class="fas fa-eye"></i></span>
                </div>
                <button type="submit" class="btn">Entrar</button>
                <div class="forgot-password">
                    <a href="#" id="forgotPasswordLinkConductores">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function changeBackground(role) {
            const backgroundImage = document.getElementById('backgroundImage');
            let imageUrl = '';

            switch (role) {
                case 'administrativo':
                    imageUrl = 'imagenes/administracion.jpg';
                    break;
                case 'tecnico':
                    imageUrl = 'imagenes/tecnicos.jpg';
                    break;
                case 'clientes':
                    imageUrl = 'imagenes/Login%20segun%20tipo%20de%20usuario%20Biopolab_page-0003.jpg';
                    break;
                default:
                    console.error("Role not recognized");
                    return;
            }

            backgroundImage.style.backgroundImage = `url(${imageUrl})`;
            console.log(`Background image changed to: ${imageUrl}`);
        }

        // Set initial background image to 'administrativo' on page load
        window.onload = function() {
            changeBackground('administrativo');
        };

        function togglePasswordVisibility(id) {
            const passwordInput = document.getElementById(id);
            const passwordEyeIcon = passwordInput.nextElementSibling;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordEyeIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                passwordInput.type = 'password';
                passwordEyeIcon.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }
        
    </script>
<script>
  if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('/service-worker.js')
      .then(function(registration) {
        console.log('Service Worker registrado con éxito:', registration);
      })
      .catch(function(error) {
        console.log('Error al registrar el Service Worker:', error);
      });
  }
</script>

</body>
</html>
